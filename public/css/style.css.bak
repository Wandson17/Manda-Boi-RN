/*CSS DA TELA VAQUEJADAS_CADASTRADAS*/
.VaqCadastradas {
  width: 100%;
  height: 800px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.VaqCadastradas .conteudobarras {
  background-color: rgba(255, 255, 255, 0.526);
  border-radius: 20px;
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 2%;
  padding: 30px;
}

.conteudobarras .barra {
  display: flex;
  border: 1px solid black;
  background-color: rgba(255, 255, 255, 0.764);
  width: 100%;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 40px;
}

.links a {
  text-decoration: none;
  padding: 3px;
}

.VaqCadastradas .conteudobarras button {
  border: 1px solid green;
  border-radius: 40px;
  background-color: rgb(138, 202, 138);
  color: white;
  padding: 10px;

}

.VaqCadastradas .conteudobarras h1 {
  color: white;
  text-shadow: 2px 2px 4px black;

}

.VaqCadastradas .conteudobarras img {
  width: 50%;
  height: 50%;
}

.imagemvaqcadastradas {
  background-image: url("/imgs/boi_vaq.jpg");
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 100%;
}

@media only screen and (max-width: 1024px) {
  .VaqCadastradas .conteudobarras img {
    width: 90%;
    height: 90%;
  }

  .imagemvaqcadastradas {
    background-size: auto;
  }
}