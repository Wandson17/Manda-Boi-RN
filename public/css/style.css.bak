.showcase {
  height: 100vh;
  background-image: linear-gradient(transparent 70%, #fff),
    url(/imgs/vaqueiro.jpeg);
  background-size: cover;
  background-repeat: no-repeat;
}

.poster {
  width: 100%;
}

.background {
  background-image: url(/imgs/fundo.jpg);
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 100%;
}

.search-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.tb {
  display: table;
  width: 100%;
}

.td {
  display: table-cell;
  vertical-align: middle;
}

button {
  color: #fff;
  font-family: Nunito;
  padding: 0;
  margin: 0;
  border: 0;
  background-color: transparent;
}

#s-cover {
  width: 45px;
}

.button {
  position: relative;
  display: block;
  width: 40px;
  height: 39px;
  cursor: pointer;
  background-color: #FFB17B;
  border-radius: 0px 10px 10px 0px;
}

#s-circle {
  position: relative;
  top: -3px;
  left: 6px;
  width: 20px;
  height: 20px;
  margin-top: 0;
  border-width: 3px;
  border: 3px solid #000000;
  background-color: transparent;
  border-radius: 50%;
  transition: 0.5s ease all;
}

.button span {
  position: absolute;
  top: 40px;
  left: 11px;
  display: block;
  width: 33px;
  height: -8px;
  background-color: rgb(0, 0, 0);
  border-radius: 5px;
  transform: rotateZ(52deg);
  transition: 0.5s ease all;
}

.button span:before,
.button span:after {
  content: "";
  position: absolute;
  bottom: 3px;
  right: 22px;
  width: 12px;
  height: 3px;
  background-color: #060606;
  border-radius: 5px;
  transform: rotateZ(0);
  transition: 0.5s ease all;
}

#s-cover:hover #s-circle {
  top: -1px;
  width: 23px;
  height: 3px;
  border-width: 0;
  background-color: #000000;
  border-radius: 10px;
}

#s-cover:hover span {
  top: 50%;
  left: 47px;
  width: 15px;
  margin-top: -9px;
  transform: rotateZ(0);
}

#s-cover:hover button span:before {
  bottom: -15px;
  transform: rotateZ(-52deg);
}

#s-cover:hover button span:after {
  bottom: -4px;
  transform: rotateZ(52deg);
}

#s-cover:hover button span:before,
#s-cover:hover button span:after {
  right: 28px;
  width: 16px;
  background-color: #000000;
}

form {
  height: 96px;
}

.events {
  width: 100%;
  height: 100vh;
  background-color: white;
}

.title {
  font-family: "Orelega One", serif;
  text-shadow: 2px 2px 5px grey;
}

.sobre {
  background: rgb(255, 255, 255);
